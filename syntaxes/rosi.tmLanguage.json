{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rosi",
  "patterns": [
    { "include": "#comments" },
    { "include": "#types" },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#labels"
    },
    { "include": "#constants" },
    { "include": "#operators" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.other.rosi",
          "match": "\\b(forall|type|import)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.rosi",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.rosi",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.rosi",
          "begin": "{-",
          "end": "-}"
        },
        {
          "name": "comment.line.rosi",
          "begin": "--",
          "end": "\n"
        }
      ]
    },
    "types": {
      "patterns": [{ "match": "(#'?\\w+?)\\b", "name": "meta.type.name.rosi" }]
    },
    "labels": {
      "patterns": [
        {
          "name": "string.quoted.unquoted.other.rosi",
          "match": "(\\'\\w+)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.rosi",
          "match": "\\b(Pi|Sigma|Mu)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.rosi",
          "match": "[\\!\\$\\%\\&\\;\\+\\.\\/\\<\\>\\=\\?\\@\\^\\|\\-\\~\\*\\:\\\\]+"
        },
        { "name": "keyword.operator.new.rosi", "match": "\\b(prj|inj|fix|in|out)\\b" }
      ]
    }
  },
  "scopeName": "source.rosi"
}
